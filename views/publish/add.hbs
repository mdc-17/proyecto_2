<div class="d-flex justify-content-center mx-auto w-50">
    <div class="card p-3 m-2" style="width: 50rem; background: rgba(158, 177, 191, 0.1);">
        <div class="card-body">

        <form action="/publish/publish" method="post" enctype="multipart/form-data">
    <div>
        <label class="card-text" for="peticion-input"><b>Petición del usuario:</b>  </label><br>
        <input class="w-100" style="border:1px solid #55b1df;border-radius: 20px" type="text" name="hostRequest" id="peticion-input">
    </div>

    <div>
        <label class="card-text" for="peticionDetalles-input"><b>Descripción de la petición:</b>  </label><br>
        <input class="w-100" style="border:1px solid #55b1df;border-radius: 20px" type="text" name="hostRequestDetail" id="peticionDetalles-input">
    </div>

    <div>
        <label class="card-text mt-2" for="localizacion-input"><b>Localización:</b> </label><br>
        <input class="w-100" style="border:1px solid #55b1df;border-radius: 20px" type="localizacion" name="location" id="localizacion-input">
    </div>

    <div>
        <label class="card-text mt-2" for="address-input"><b>Calle:</b>  </label><br>
        <input class="w-100" style="border:1px solid #55b1df;border-radius: 20px;" type="address" name="address" id="address-input" placeholder="Carrer....">
    </div>
    <label class="card-text mt-2" for="photos"><b>Foto:</b> <br><span class="d-block btn-photo mt-1 p-2 w-100">Selecciona la foto de tu casa</span> </label>
    <input id="photos" style="display:none" type="file" name="photos" required>
    
    <div>
    <label class="card-text mt-2" for="description-input"><b>Descripción:</b>  </label><br>
    <textarea name="description" for="description-input" type="text" id="description-input" style="width: 100%;">Escribe aquí una pequeña descripción</textarea>
    </div>
    
    <div>
        <label class="card-text mt-2" for="servicios"><b>Servicios Ofrecidos</b></label>
        <ul>
        <li>Aire Acondicionado <input type="checkbox" name="services[]" value="Aire Acondicionado"></li>
        <li>Wifi <input type="checkbox" name="services[]" value="Wifi"></li>
        <li>Toallas <input type="checkbox" name="services[]" value="Toallas"></li>
        <li>Secador de pelo <input type="checkbox" name="services[]" value="Secador"></li>
        <li>Lavadora <input type="checkbox" name="services[]" value="Lavadora"></li>
        <li>Secadora <input type="checkbox" name="services[]" value="Secadora"></li>
        <li>Plancha <input type="checkbox" name="services[]" value="Plancha"></li>
        <li>TV <input type="checkbox" name="services[]" value="TV"></li>
        </ul>
        </div>
        <button class="btn btn-lg" style="color: white; background-color: #55b1df; border:1px border #3da0d1;" type="submit">Añadir</button>
    </form>
    </div>
    </div>   
</div>