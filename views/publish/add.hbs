<form action="/publish" method="post" enctype="multipart/form-data">
    <div>
        <label for="peticion-input"> Peticion usuario </label>
        <input type="text" name="peticion" id="peticion-input">
    </div>

    <div>
        <label for="localizacion-input"> Localizacion </label>
        <input type="localizacion" name="localizacion" id="localizacion-input">
    </div>

    <div>
        <label for="address-input">Calle</label>
        <input type="address" name="address" id="address-input" placeholder="Carrer....">
    </div>
    <input type="file" name="file">
    <div>
        <label for="servicios">Servicios Ofrecidos</label>
        <ul>
        <li>Aire Acondicionado <input type="checkbox" name="services[]" value="Aire Acondicionado"></li>
        <li>Wifi <input type="checkbox" name="services[]" value="Wifi"></li>
        <li>Toallas <input type="checkbox" name="services[]" value="Toallas"></li>
        </ul>
    </div>
</form>