
<div class="d-flex flex-column justify-content-center align-items-center w-100 mx-auto">


{{#if mybookings}}
<h1 class="card-title mx-auto mt-3">MIS RESERVAS</h1>
{{#each mybookings}}

<div class="card p-3 m-2" style="width: 50rem; background: rgba(158, 177, 191, 0.1);">


{{#each homeImages}}
<img class="card-img-top mx-auto" src="{{this}}">
{{/each}}

<div class="card-body">
<p class="card-text mt-2"><b>Prestación: </b>{{hostRequest}}</p>
<p class="card-text"><b>Detalles de prestación: </b>{{hostRequestDetail}}</p>
<p class="card-text"><b>Dirección: </b>{{address}} {{location}}</p>
<p class="card-text"><b>Estado de la reserva: </b>{{statusRequest}}</p>
<b>Servicios incluidos:</b>
<ul>
{{#each services}}
<li class="card-text">{{this}}</li>
{{/each}}
</ul>
<div class="w-100 text-center mx-auto">
<a class="btn btn-lg btn-danger w-50" href="/bookings/cancelar/{{_id}}">Cancelar reserva</a>
</div>

</div>
</div>
{{/each}}
{{else}}
<h1 class="mx-auto mt-3">No has realizado ninguna reserva.</h1>


{{/if}}

</div>
