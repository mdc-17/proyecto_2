<h2> Sign Up </h2>

{{#if errorMessage}}
<p class="error-message">
    {{ errorMessage }}
</p>
{{/if}}

<form action="/signup" method="post">
    <div>
        <label for="usuario-input"> Usuario </label>
        <input type="text" name="usuario" id="usuario-input" placeholder="e.g., Diana Prince">
    </div>

    <div>
        <label for="email-input"> Email </label>
        <input type="email" name="email" id="email-input" placeholder="e.g., diana@themyscira.agency">
    </div>

    <div>
        <label for="password-input"> Password </label>
        <input type="password" name="password" id="password-input" placeholder="e.g., ••••••••••••">
    </div>

     <div>
        <label for="telefono-input"> Telefono </label>
        <input type="telefono" name="telefono" id="telefono-input" placeholder="e.g., ••••••••••••">
    </div>

    <button> Create New Account </button>
</form>

<p>
    Already have an account?
    <a href="/login">
        Log in.
    </a>
</p>